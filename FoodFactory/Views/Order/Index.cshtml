@model List<FoodFactory.Models.Food>

<h2>Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Type</th>
            <th>Size</th>
            <th>Cheese</th>
            <th>Dessert</th>
            <th>Drinks</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Type</td>
                    <td>@order.Size</td>
                    <td>@order.Cheese</td>
                    <td>@order.Dessert</td>
                    <td>@order.Drinks</td>
                    <td>
                        <form asp-action="Delete" asp-controller="Order" method="post">
                        @Html.Hidden("id", order.Id)
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
        }
    </tbody>
</table>
