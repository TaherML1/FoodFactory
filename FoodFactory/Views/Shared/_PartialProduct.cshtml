
@model FoodFactory.Models.Food

<form asp-action="Zurna" method="post">
    @foreach (var option in Model.Options)
    {
            <div class="form-group">
                <label for="exampleFormControlSelect1">@option.Label</label>
                <select class="form-control" id="exampleFormControlSelect1" name="@option.Label">

                @for (int i = 0; i < option.Name.Length; i++)
                {
                            <option>@option.Name[i]</option>
                }
                </select>
            </div>
    }   
    <button type="submit" class="btn btn-primary">Submit</button>
</form>






